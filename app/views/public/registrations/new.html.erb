<div class = "container">
 <div class = "row">
  <div class = "col">
   <div class = "text-center"><h1>新規登録</h1></div>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table class = "table">
     <tr>
      <th class = "text-center">名前</th>
      <th>
       <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(姓)" %>
       <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "(名)" %>
      </th>
     </tr>
     <tr>
      <th class = "text-center">フリガナ</th>
      <th>
       <%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana",  placeholder: "(セイ)" %>
       <%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana",  placeholder: "(メイ)" %>
      </th>
     </tr>
     <tr>
      <th class = "text-center"><%= f.label :email %></th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
     </tr>
     <tr>
      <th class = "text-center">郵便番号（ハイフンなし）</th>
      <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",  placeholder: "1234567", class: 'fa' %></th>
     </tr>
     <tr>
      <th class = "text-center">住所</th>
      <th><%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60",  placeholder: "", class: 'fa' %></th>
     </tr>
     <tr>
      <th class = "text-center">電話番号（ハイフンなし）</th>
      <th><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",  placeholder: "12345678910", class: 'fa' %></th>
     </tr>
     <tr>
      <th class = "text-center">
       <%= f.label :password %>
       <% if @minimum_password_length %>
       <em>(<%= @minimum_password_length %> characters minimum)</em>
       <% end %>
      </th>
      <th>
       <%= f.password_field :password, autocomplete: "new-password" %>
      </th>
     </tr>
     <tr>
      <th class = "text-center"><%= f.label :password_confirmation %></th>
      <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
     </tr>
    </table>
    <h2 class = "actions text-center"><%= f.submit "登録する" %></h2>
   <% end %>
  </div>
 </div>
</div>