<div class = "container">
  <div class = "row justify-content-center">
    <h1 class = "mt-5">登録情報編集</h1>
  </div>
  <div class = "row justify-content-center">
    <div class = "col-9">
      <%= form_with(model:@customer, url:customers_path, local: true ,method: :patch) do |f| %></th>
        <table class = "table">
          <tr>
           <th><%= f.label :"名前" %></th>
           <th>(姓)<%= f.text_field :last_name, class: "col" %><br>(名)<%= f.text_field :first_name, class: "col" %></th>
          </tr>
          <tr>
           <th><%= f.label :"フリガナ" %></th>
           <th>(セイ)<%= f.text_field :last_name_kana, class: "col" %><br>(メイ)<%= f.text_field :first_name_kana, class: "col" %></th>
          </tr>

          <tr>
           <th><%= f.label :"メールアドレス" %></th>
           <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col" %></th>
          </tr>

          <tr>
           <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
           <th><%= f.text_field :postal_code, class: "col" %></th>
          </tr>

          <tr>
           <th><%= f.label :"住所" %></th>
           <th><%= f.text_field :address, class: "col" %></th>
          </tr>

          <tr>
           <th><%= f.label :"電話番号(ハイフンなし)" %></th>
           <th><%= f.text_field :phone_number, class: "col" %></th>
          </tr>

        </table>
        <div class = "row justify-content-center">
           <p class = "mt-3"><%= f.submit "編集内容を保存する" %></p>
        </div>
        <div class = "row justify-content-end mb-5">
           <%= link_to '退会する', unsubscribe_customers_path, class: "btn btn-danger btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>