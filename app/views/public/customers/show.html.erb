<div class = "container">
  <div class = "row justify-content-center">
    <h1 class = "mt-5">マイページ</h1>
  </div>
  <div class = "row justify-content-center">
    <div class = "col-6 d-flex justify-content-between">
      <div>
        <h5>登録情報</h5>
      </div>
      <div>
        <h6><%= link_to "編集する", edit_customers_path, class: "btn btn-success btn-sm" %></h6>
      </div>
    </div>
  </div>
  <div class = "row justify-content-center">
    <div class = "col-6">
      <table class = "table">
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %> </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
      </table>
      <div class = "row justify-content-end">
        <div class = "col-6">
          <h6>
          <div class = "d-flex justify-content-between mt-3">
            配送先<%= link_to "一覧を見る", public_deliveries_path, class: "btn btn-primary btn-sm" %>
          </div>
          <div class = "d-flex justify-content-between mt-2">
            注文履歴一覧<%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary btn-sm" %>
          </div>
        </h6>
        </div>

      </div>
    </div>
  </div>
</div>