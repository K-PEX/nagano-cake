<div class="container">
  <h2 class="text-center">ジャンル編集</h2>
  <div class="row justify-content-center">
    <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
        <div>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit "変更を保存する",class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
        </div>
    <% end %>
  </div>
</div>